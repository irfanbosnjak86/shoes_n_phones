= simple_form_for [:admin, @shoe], :html => { :multipart => true } do |f|
  - if @shoe.errors.any?
    #errors
      %p
        = pluralize(@shoe.errors.count, "error")
        Sprečilo kreiranje artikla obuća
      %ul 
        - @shoe.errors.full_messages.each do |msg|
          %li= msg
  .panel-heading
    .image-wrapper
      = f.file_field :feat_img
  .panel-body
    .form-group 
      = f.input :title, input_html: { class: 'form-control' }
      = f.input :description, input_html: { class: 'form-control' }, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'mini'} }

    = f.button :submit, class: "btn btn-primary"

